{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto mt-10 p-6 bg-gray-50 rounded-lg shadow">

        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Gérer les lieux</h1>
            {% if is_granted('ACCESS_VILLE_ADMIN') %}
              <a href="/lieu/add"
                 class="px-5 py-2.5 bg-green-700 text-white rounded-lg hover:bg-green-800 transition font-medium text-sm">
                  Ajouter
              </a>
           {% endif %}
        </div>

        {% if lieux is empty %}
            <p class="text-gray-600 italic">Aucun lieu n'a été créé pour le moment.</p>
        {% else %}
            <div class="overflow-x-auto shadow-lg rounded-lg">
                <table class="min-w-full divide-y divide-gray-200 bg-white">
                    <thead class="bg-gray-100 text-gray-700 uppercase text-sm">
                    <tr>
                        <th class="px-6 py-3 text-left">Nom</th>
                        <th class="px-6 py-3 text-left">Ville</th>
                        <th class="px-6 py-3 text-left">Rue</th>
                        {% if is_granted('ACCESS_LIEU_ADMIN') %}
                          <th scope="col" class="px-6 py-3">
                              Actions
                          </th>
                      {% endif %}
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 text-sm text-gray-800">
                    {% for lieu in lieux %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 font-medium">{{ lieu.nom }}</td>
                            <td class="px-6 py-4">{{ lieu.ville.nom }}</td>
                            <td class="px-6 py-4">{{ lieu.rue }}</td>
                            {% if is_granted('ACCESS_LIEU_ADMIN', lieu) %}
                                <td class="px-6 py-4">
                                    <a href="/lieu/del/{{ lieu.id }}" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">
                                        Supprimer
                                    </a>
                                    <a href="/lieu/edit/{{ lieu.id }}" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900">
                                        Modifier
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
