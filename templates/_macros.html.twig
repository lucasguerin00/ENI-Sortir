{# Définit la couleurs des bages d'états des sorties #}
{% macro etatBadge(etat) %}
    {% set colors = {
        'Ouvert': 'bg-green-100 text-green-800',
        'En cours': 'bg-yellow-100 text-yellow-800',
        'En création': 'bg-orange-100 text-orange-800',
        'Fermée': 'bg-gray-100 text-gray-800',
        'Terminée': 'bg-red-100 text-red-800'
    } %}
    {% if etat %}
        <span class="px-2 py-1 rounded-full text-xs font-semibold {{ colors[etat.libelle]|default('') }}">
            {{ etat.libelle }}
        </span>
    {% endif %}
{% endmacro %}

{# Définit les boutons d'actions #}
{% macro actionButton(url, label, color='blue', extraClasses='') %}
    <a href="{{ url }}" class="w-32 text-center px-3 py-1.5 bg-{{ color }}-600 text-white text-xs rounded hover:bg-{{ color }}-700 {{ extraClasses }}">
        {{ label }}
    </a>
{% endmacro %}

{# Définit les champs des formulaires #}
{% macro formField(field) %}
    {{ form_row(field, {
        label_attr: {'class': 'text-black'},
        attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md bg-white text-black'}
    }) }}
{% endmacro %}

