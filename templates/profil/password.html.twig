{% extends 'base.html.twig' %}
{% import 'macros/form_fields.html.twig' as macros %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-start justify-center mt-10">
        <div class="w-full max-w-md shadow-lg rounded-xl p-8 bg-gray-50">
            <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Mot de passe oublié</h1>

            {% for message in app.flashes('error') %}
                <div class="mb-4 px-4 py-2 rounded bg-red-200 text-red-800">{{ message }}</div>
            {% endfor %}

            {{ form_start(form) }}
            {{ macros.render_form(form) }}
            <div class="mt-6 flex justify-center">
                <button type="submit"
                        class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium transition">
                    Envoyer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
