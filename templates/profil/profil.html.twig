{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-start justify-center mt-10">
        <div class="w-full max-w-3xl shadow-lg rounded-xl p-8 bg-gray-50">
            <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
                <img src="{{ asset('/assets/images/' ~ image) }}" alt="Image profil" class="w-32 h-32 rounded-full object-cover border border-gray-300">

                <div class="flex-1 space-y-3">
                    <h1 class="text-2xl font-bold text-gray-800">{{ pseudo }}</h1>

                    <div><span class="font-semibold">Prénom :</span> {{ prenom }}</div>
                    <div><span class="font-semibold">Nom :</span> {{ nom }}</div>
                    <div><span class="font-semibold">Téléphone :</span> {{ telephone }}</div>
                    <div><span class="font-semibold">Email :</span> {{ email }}</div>
                    <div><span class="font-semibold">Ville de rattachement :</span> {{ site }}</div>

                    <div class="mt-6 flex gap-4">
                        <a href="{{ path('app_default') }}"
                           class="px-6 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 font-medium transition">
                            Retour
                        </a>

                        {% if app.user.id == id %}
                            <a href="{{ path('edit_participant', {'id': app.user.id }) }}"
                               class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium transition">
                                Modifier
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
